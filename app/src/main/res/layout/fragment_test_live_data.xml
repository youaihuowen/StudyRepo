<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TestLiveDataFragment">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="LiveDataFragment"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_livedata_value"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_livedata_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="当前liveData的值为："
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/tv_live_map"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_live_map"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="liveData Map"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_livedata_value"
        app:layout_constraintBottom_toTopOf="@+id/tv_live_media"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_live_media"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="liveData media"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_map"
        app:layout_constraintBottom_toTopOf="@+id/tv_live_switch"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_live_switch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="liveData media"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_media"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
